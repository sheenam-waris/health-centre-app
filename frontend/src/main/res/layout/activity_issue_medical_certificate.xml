<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".doctor.ViewMedicalCertificateActivity">


    <ImageView
        android:id="@+id/nitc_logo_med_cert"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/img"
        android:layout_marginTop="80px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nitc_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:text="NITC Health Centre"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="20px"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nitc_logo_med_cert"/>

        <TextView
            android:id="@+id/nitc_heading_below"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medical Certificate For Students"
            android:layout_marginTop="10px"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="15px"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nitc_heading"/>

    <TextView
        android:id="@+id/mid_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:paddingStart="30px"
        android:paddingEnd="30px"
        android:text="I, Dr......after careful ....."
        android:textColor="@color/black"
        android:textSize="15px"
        app:layout_constraintTop_toBottomOf="@+id/nitc_heading_below"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/purpose_med_cert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingStart="30px"
        android:text="Purpose : Make Up Exam"
        android:textColor="@color/black"
        android:textSize="18px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mid_content_view" />

    <TextView
        android:id="@+id/doctor_sign_med_cert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="12dp"
        android:paddingEnd="30px"
        android:text="Doctor Name"
        android:textColor="@color/black"
        android:textSize="18px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.962"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/issue_date_med_cert" />

    <TextView
            android:id="@+id/issue_date_med_cert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:paddingStart="30px"
            android:textSize="15px"
            android:text="Date : 16/05/2023"
            app:layout_constraintHorizontal_bias="0.0"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/purpose_med_cert"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/signature_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingEnd="30px"
            android:layout_marginTop="10px"
            android:textSize="15px"
            android:text="Signature"
            app:layout_constraintHorizontal_bias="0.962"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/doctor_sign_med_cert"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>



    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="182dp"
        tools:layout_editor_absoluteY="344dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/download_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/baseline_download_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/light_blue"
        android:layout_marginBottom="60dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>