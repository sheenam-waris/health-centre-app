<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/custom_login"
    android:id="@+id/reporting_date_dialog_box">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Reporting Date"
        android:layout_marginTop="90dp"
        android:padding="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/blue"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/staff_give_reporting_date"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/light_blue"
        android:text="DD/MM/YY"
        android:layout_below="@+id/tv_title"
        app:icon="@android:drawable/ic_menu_my_calendar"
        android:layout_centerHorizontal="true"
        android:textAlignment="viewStart"
        app:cornerRadius="15dp"
        android:longClickable="false"
        android:focusable="false"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/staff_ok_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:backgroundTint="@color/blue"
        android:text="OK"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/staff_give_reporting_date"
        android:layout_centerHorizontal="true"
        app:cornerRadius="15dp"
        android:longClickable="false"
        android:focusable="false"/>


</RelativeLayout>